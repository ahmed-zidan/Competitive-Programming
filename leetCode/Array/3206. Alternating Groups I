class Solution {
public:
    int numberOfAlternatingGroups(vector<int>& colors) {
        int cnt = 0;
        int i =1;
        for(;i<colors.size()-1;i++){
            if(colors[i-1] != colors[i] &&colors[i+1] != colors[i] )
                cnt++;
        }

        if(colors[i-1] != colors[i] &&colors[0] != colors[i] )
                cnt++;
        
        if(colors[i] != colors[0] &&colors[1] != colors[0] )
                cnt++;

        return cnt;
    }
};
