class Solution {
public:
    string generateTheString(int n) {
        string s = "";
        if(n == 1){
            return "x";
        }
        if(n%2 == 0){
            while(n > 1){
                s+= 'p';
                n--;
            }
            s+= 'x';
            
        }else{
            while(n > 2){
                s+= 'p';
                n--;
            }
            s+= "xz";
        }
        return s;
    }
};


