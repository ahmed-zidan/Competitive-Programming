class Solution {
public:
    int compress(vector<char>& chars) {
        int i =0;int sz = 0;
        while(i<chars.size()){
            int j = i+1;
            int cnt = 1;
            while(j < chars.size() && chars[i] == chars[j]){
                j++;
                cnt++;
            }
            
            if(cnt > 1)
              sz = splitNum(cnt , sz,chars[i] , chars); 
            else {chars[sz] = chars[i];sz++;}
            //sz++;
            i = j;
        }
        return sz;
    }


    int splitNum(int num , int sz,char m ,vector<char>& chars){
        string x = "";
        chars[sz] = m;
        sz+= 1;
         while(num > 0){
            char v = '0'+ num%10;
            x = v+x;
            num/= 10;
        }
        
        for(auto i : x){
            chars[sz] = i;
            sz++;
        }
        return sz;
    }
};
