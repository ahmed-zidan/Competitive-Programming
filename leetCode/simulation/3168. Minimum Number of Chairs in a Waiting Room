class Solution {
public:
    int minimumChairs(string s) {
        int ch = 0;
        int mx = 0;
        int i =0;
        while(i<s.size()){
            while(i<s.size() && s[i] == 'E'){
                ch--;
                i++;
            }
            mx = max(abs(ch) , mx);
            while(i<s.size() && s[i] == 'L'){
                ch++;
                i++;
            }
            
        }        
        return mx;
    }
};


