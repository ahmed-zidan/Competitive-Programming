    #include<iostream>
    #include<string>
    using namespace std;
     
    int main(){
    int n;
    cin>>n;
    string s;
    cin>>s;
     
    int sum = 0;
     
    for(auto ch : s)
        if(ch == '-')
        sum++;
        else break;
     
     
    for(auto ch: s){
        if(ch == '-'){
            if(sum != 0)
                sum--;
     
        }
        else sum++;
     
    }
     
     
    cout<<sum<<endl;
     
    }
